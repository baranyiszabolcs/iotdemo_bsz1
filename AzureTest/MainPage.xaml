        <TextBlock HorizontalAlignment="Left" Margin="25,136,0,0" Text="Message:" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,551,0,0" Text="MyMethodAsync  és Konsys  hvásra reagál" TextWrapping="Wrap" VerticalAlignment="Top"/>
     
    </Grid>
</Page>
